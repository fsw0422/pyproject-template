{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug application locally",
      "type": "debugpy",
      "request": "launch",
      "program": "src/main.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug tests for current file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
