{
  "name": "pyproject-template",
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile"
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/ubuntu/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.zshrc,target=/home/ubuntu/.zshrc,type=bind,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind,readonly",

    // Following dot files should be moved to custom configuration settings
    // Waiting for devcontainer extension for customization feature https://github.com/devcontainers/spec/issues/22#event-20876902965
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.p10k.zsh,target=/home/ubuntu/.p10k.zsh,type=bind,readonly"
  ],
  "shutdownAction": "stopContainer",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    }
  },
  "remoteUser": "ubuntu",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ubuntu/pyproject-template,type=bind",
  "workspaceFolder": "/home/ubuntu/pyproject-template",
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "ms-python.debugpy",
        "ms-python.python",
        "tamasfe.even-better-toml"
      ]
    }
  },

  // This command should be moved to custom configuration settings
  // Waiting for devcontainer extension for customization feature https://github.com/devcontainers/spec/issues/22#event-20876902965
  "postCreateCommand": "sh .devcontainer/post-create.sh",

  "postStartCommand": "pip install -e ."
}
